@model Product

@{
    ViewData["Title"] = "Create";
}

<h1> @(Model == null || Model.Id == null ? "Create" : "Update")</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data" >
            <input asp-for="Id" hidden />
            <input asp-for="Url" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                @* <label asp-for="Url" class="control-label"></label> *@
                <input  name="file" class="form-control" type="file" />
            </div>
            <div class="form-group">
                <input type="submit" style="width: 100%" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-3 ms-4"  >
        @if(Model != null)
        {          
            <img style="height: 100px; width: 100px" src="@("https://localhost:7227/" + Model.Url)" />
        }
    </div>
</div>

<div class="mt-3" >
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
